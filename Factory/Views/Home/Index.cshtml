@{
    Layout = "_Layout";
}

@using Factory.Models;
<hr>
<h1>Machine and Engineer Management System:</h1>
<hr>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div id="carouselExampleFade" class="carousel slide carousel-fade">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="~/assets/construction1.jpg" width="300px" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="~/assets/construction2.jpg" width="300px" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="~/assets/construction3.jpg" width="300px" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="row">
    <div class="col-md-6">
        <div class="card custom-card">
            <div class="card-body">
                <h4>Machine | Machine Status</h4>
                @if (Model["machines"].Length == 0)
                {
                    <p>No machines added to system. <a href="/machines/create">Add one here</a></p>
                }
                <ul>
                    @foreach (Machine machine in Model["machines"])
                    {
                        <li>@Html.ActionLink(@machine.MachineName + " | " + machine.MachineStatus, "Details", "Machines", new { id = @machine.MachineId })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card custom-card">
            <div class="card-body">
                <h4>Engineer | Engineer Status</h4>
                @if (Model["engineers"].Length == 0)
                {
                    <p>No engineers added to system. <a href="/engineers/create">Add one here</a></p>
                }
                <ul>
                    @foreach (Engineer engineer in Model["engineers"])
                    {
                        <li>@Html.ActionLink(@engineer.EngineerName + " | " + engineer.EngineerStatus, "Details", "Engineers", new { id = @engineer.EngineerId })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>